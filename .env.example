# Application Configuration
FRONTEND_URL=http://localhost:3000
PORT=3001
NODE_ENV=development
DEFAULT_CURRENCY=USD

# PostgreSQL key for prisma
DATABASE_URL_POSTGRES=postgresql://user:password@localhost:5432/EasyStore
PRISMA_HIDE_UPDATE_MESSAGE=1

# PorstgreSQL keys for docker
DATABASE_URL_POSTGRES_DOCKER=postgresql://user:password@postgres:5432/EasyStore
POSTGRES_PORT=5432
POSTGRES_USER=user
POSTGRES_PASSWORD=password
POSTGRES_DB=EasyStore

# Authentication
JWT_SECRET=your_secure_secret_here

GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here
GOOGLE_CALLBACK_URL=http://localhost:3000/auth/google/callback

FACEBOOK_CLIENT_ID=your_facebook_app_id_here
FACEBOOK_CLIENT_SECRET=your_facebook_app_secret_here
FACEBOOK_CALLBACK_URL=http://localhost:3000/auth/facebook/callback

APPLE_CLIENT_ID=your_apple_service_id_here
APPLE_CLIENT_SECRET=your_apple_client_secret_here
APPLE_CALLBACK_URL=http://localhost:3000/auth/apple/callback

# Email service
RESEND_API_KEY=resend_api_key_here
RESEND_FROM_EMAIL=noreply@yourdomain.com

# Media service
IMAGEKIT_PUBLIC_KEY=your_public_key
IMAGEKIT_PRIVATE_KEY=your_private_key
IMAGEKIT_URL_ENDPOINT=https://ik.imagekit.io/your_instance_id/

# Payment Credentials Encryption
PAYMENT_CREDENTIALS_ENCRYPTION_KEY=test-payment-credentials-encryption-key-32-bytes-minimum
PAYMENT_CREDENTIALS_SALT=test-payment-credentials-salt-for-development