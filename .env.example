# Application Configuration
FRONTEND_URL=http://localhost:3000
PORT=3001
NODE_ENV=development
DEFAULT_CURRENCY=USD

# PostgreSQL key for prisma
DATABASE_URL_POSTGRES=postgresql://user:password@localhost:5432/EasyStore
PRISMA_HIDE_UPDATE_MESSAGE=1

# PorstgreSQL keys for docker
DATABASE_URL_POSTGRES_DOCKER=postgresql://user:password@postgres:5432/EasyStore
POSTGRES_PORT=5432
POSTGRES_USER=user
POSTGRES_PASSWORD=password
POSTGRES_DB=EasyStore

# Authentication
JWT_SECRET=your_secure_secret_here

GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here
GOOGLE_CALLBACK_URL=http://localhost:3000/auth/google/callback

FACEBOOK_CLIENT_ID=your_facebook_app_id_here
FACEBOOK_CLIENT_SECRET=your_facebook_app_secret_here
FACEBOOK_CALLBACK_URL=http://localhost:3000/auth/facebook/callback

APPLE_CLIENT_ID=your_apple_service_id_here
APPLE_CLIENT_SECRET=your_apple_client_secret_here
APPLE_CALLBACK_URL=http://localhost:3000/auth/apple/callback

# Email service
RESEND_API_KEY=resend_api_key_here
RESEND_FROM_EMAIL=noreply@yourdomain.com












# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=redis_password
REDIS_DB=0
REDIS_KEY_PREFIX=ecommerce:
REDIS_DEFAULT_TTL=3600

# Redis Sentinel
REDIS_SENTINEL_ENABLED=false
REDIS_SENTINEL_HOSTS=localhost
REDIS_SENTINEL_PORTS=26379
REDIS_SENTINEL_PASSWORD=

# Redis Cluster
REDIS_CLUSTER_ENABLED=false
REDIS_CLUSTER_HOSTS=localhost
REDIS_CLUSTER_PORTS=6379,6380,6381

# Kafka Configuration
KAFKA_BROKERS=localhost:9092
KAFKA_CLIENT_ID=ecommerce-service
KAFKA_CONSUMER_GROUP_ID=ecommerce-group
KAFKA_ACKS=-1
KAFKA_COMPRESSION_TYPE=snappy
KAFKA_IDEMPOTENCE_ENABLED=true
KAFKA_RETRIES=8
KAFKA_ALLOW_AUTO_TOPIC_CREATION=false

# Kafka Topics
KAFKA_TOPIC_ORDER_CREATED=ecommerce.orders.created
KAFKA_TOPIC_PRODUCT_UPDATED=ecommerce.products.updated

# Kafka Consumer Groups
KAFKA_GROUP_ORDER_PROCESSING=order-processing-service
KAFKA_GROUP_PRODUCT_CACHE=product-cache-service

# Opcional - SSL and SASL configuration for Kafka
KAFKA_SSL_ENABLED=false
KAFKA_SASL_ENABLED=false
KAFKA_SASL_MECHANISM=plain
KAFKA_SASL_USERNAME=
KAFKA_SASL_PASSWORD=