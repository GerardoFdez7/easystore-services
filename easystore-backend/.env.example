# PostgreSQL key for prisma
DATABASE_URL_POSTGRES=postgresql://user:password@localhost:5432/EasyStoreDB

# PorstgreSQL keys for docker
POSTGRES_PORT=5432
POSTGRES_USER=user
POSTGRES_PASSWORD=password
POSTGRES_DB=EasyStoreDB

# MongoDB key for prisma
DATABASE_URL_MONGODB=mongodb://mongo:27017/mydatabase

# MongoDB key for docker
MONGODB_PORT=27017

PRISMA_HIDE_UPDATE_MESSAGE=1

# Application Configuration
API_PORT=3000
NODE_ENV=development

# Authentication
JWT_SECRET=your_secure_secret_here
JWT_EXPIRATION=86400
JWT_EXPIRES_IN=1d

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=redis_password
REDIS_DB=0
REDIS_KEY_PREFIX=ecommerce:
REDIS_DEFAULT_TTL=3600

# Redis Sentinel
REDIS_SENTINEL_ENABLED=false
REDIS_SENTINEL_HOSTS=localhost
REDIS_SENTINEL_PORTS=26379
REDIS_SENTINEL_PASSWORD=

# Redis Cluster
REDIS_CLUSTER_ENABLED=false
REDIS_CLUSTER_HOSTS=localhost
REDIS_CLUSTER_PORTS=6379,6380,6381

# Kafka Configuration
KAFKA_BROKERS=localhost:9092
KAFKA_CLIENT_ID=ecommerce-service
KAFKA_CONSUMER_GROUP_ID=ecommerce-group
KAFKA_ACKS=-1
KAFKA_COMPRESSION_TYPE=snappy
KAFKA_IDEMPOTENCE_ENABLED=true
KAFKA_RETRIES=8
KAFKA_ALLOW_AUTO_TOPIC_CREATION=false

# Kafka Topics
KAFKA_TOPIC_ORDER_CREATED=ecommerce.orders.created
KAFKA_TOPIC_PRODUCT_UPDATED=ecommerce.products.updated

# Kafka Consumer Groups
KAFKA_GROUP_ORDER_PROCESSING=order-processing-service
KAFKA_GROUP_PRODUCT_CACHE=product-cache-service

# Opcional - SSL and SASL configuration for Kafka
KAFKA_SSL_ENABLED=false
KAFKA_SASL_ENABLED=false
KAFKA_SASL_MECHANISM=plain
KAFKA_SASL_USERNAME=
KAFKA_SASL_PASSWORD=