# PostgreSQL key for prisma
DATABASE_URL_POSTGRES=postgresql://user:password@localhost:5432/EasyStoreDB

# PorstgreSQL keys for docker
POSTGRES_PORT=5432
POSTGRES_USER=user
POSTGRES_PASSWORD=password
POSTGRES_DB=EasyStoreDB

# MongoDB key for prisma
DATABASE_URL_MONGODB=mongodb://mongo:27017/mydatabase

# MongoDB key for docker
MONGODB_PORT=27017

PRISMA_HIDE_UPDATE_MESSAGE=1

# Application Configuration
API_PORT=3000
NODE_ENV=development

# Authentication
JWT_SECRET=your_secure_secret_here
JWT_EXPIRES_IN=1d

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=redis_password
REDIS_DB=0
REDIS_KEY_PREFIX=ecommerce:
REDIS_DEFAULT_TTL=3600

# Redis Sentinel
REDIS_SENTINEL_ENABLED=false
REDIS_SENTINEL_HOSTS=localhost
REDIS_SENTINEL_PORTS=26379
REDIS_SENTINEL_PASSWORD=

# Redis Cluster
REDIS_CLUSTER_ENABLED=false
REDIS_CLUSTER_HOSTS=localhost
REDIS_CLUSTER_PORTS=6379,6380,6381