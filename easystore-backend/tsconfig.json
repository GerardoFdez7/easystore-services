{
  "compilerOptions": {
    "module": "CommonJS",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2021",
    "sourceMap": true,
    "outDir": "./dist",
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": false,
    "noImplicitAny": false,
    "strictBindCallApply": false,
    "forceConsistentCasingInFileNames": false,
    "noFallthroughCasesInSwitch": false,
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"],
      "@test/*": ["src/test/*"],
      "@modules/*": ["src/modules/*"],
      "@infrastructure/*": ["src/infrastructure/*"],
      "@config/*": ["src/config/*"],
      "@common/*": ["src/common/*"],
      "@services/*": ["src/services/*"],
      "@application/*": ["src/application/*"],
      "@prisma/*": ["src/prisma/*"],
      // TODO: Review and decomission/remove aliases as needed
      "@database/*": ["src/infrastructure/database/*"],
      "@cache/*": ["src/infrastructure/cache/*"],
      "@graphql/*": ["src/infrastructure/graphql/*"],
      "@logging/*": ["src/infrastructure/logging/*"],
      "@search/*": ["src/infrastructure/search/*"],
      "@transport/*": ["src/infrastructure/transport/*"]
    }
  }
}
